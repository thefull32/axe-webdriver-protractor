{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "outDir": "dist/out-tsc",
        "mapRoot": "dist/out-tsc/",
        "sourceMap": true,
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "ES6",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "exclude": [
      "../node_modules",
        "plugins.ts"
    ]
}